<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Password EditText -->
    <style name="CustomPasswordEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/custom_password_edit_text_background</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:maxLength">50</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Custom Password ImageView -->
    <style name="CustomPasswordImageButton">
        <item name="android:background">@drawable/custom_password_image_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>